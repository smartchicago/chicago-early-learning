    alias {{ media_path }};
  }

  location /sms {
    auth_basic			off;
    try_files $uri @proxy_to_app;
  }

  location / {
    auth_basic                   {{ http_auth }};
    auth_basic_user_file         .htpasswd;
    try_files $uri @proxy_to_app;
  }

  location @proxy_to_app {
    proxy_set_header X-Forwarded-Host $http_host;
